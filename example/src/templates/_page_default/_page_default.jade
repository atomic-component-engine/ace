//-
	@file Defines the default page template

//- Template dependencies
include ../../organisms/_header/_header

//- Default vars
- var page = {id: "page_default", title: "Default Boilerplate Page"};


//- Import variables from calling page
block page_vars

//- Build body class
- var bodyClass = "page-"+page.id

!!! 5
//if lt IE 7
	<html class="lt-ie9 lt-ie8 lt-ie7">
//if IE 7
	<html class="lt-ie9 lt-ie8">
//if IE 8
	<html class="lt-ie9">
//if IE 9
	<html class="lt-ie10">
// [if gt IE 9] <!
html(lang="en")
	// <![endif]
	head
		title #{page.title}
		meta(charset="utf-8")
		meta(name="description", content=page.description)
		meta(name="keywords", content=page.keywords)
		meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=no, minimal-ui")
		meta(name="format-detection", content="telephone=no")
		if (env == "dev")
			link(rel="stylesheet", href="/css/main.css")
		else
			link(rel="stylesheet", href="/css/main.css")

		link(href='http://fonts.googleapis.com/css?family=PT+Mono|Open+Sans:300italic,400italic,400,300,600,700', rel='stylesheet', type='text/css')


		// if lt IE 9
			script(src="/js/ie/eventlistener.js")
			script(src="/js/ie/selectivizr-min.js")
			script(src="/js/ie/respond.min.js")

	body(class=bodyClass, data-page=page.id)
		+header()
		.content-wrapper
			.content
				block content


		if (env == "dev")
			script(data-main="/js/main", src="/js/vendor/require.js")
		else
			script(src="/js/"+pkg.name+".min.js")
